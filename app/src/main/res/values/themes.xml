<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RDME" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="large_text_size" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@string/m3_sys_typescale_label_large_font</item>
        <item name="android:fontFamily">@string/m3_sys_typescale_label_large_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">@bool/m3_sys_typescale_label_large_text_all_caps</item>
        <item name="android:letterSpacing">@dimen/m3_sys_typescale_label_large_letter_spacing</item>
    </style>
    <style name="medium_text_size" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@string/m3_sys_typescale_label_large_font</item>
        <item name="android:fontFamily">@string/m3_sys_typescale_label_large_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">@bool/m3_sys_typescale_label_large_text_all_caps</item>
        <item name="android:letterSpacing">@dimen/m3_sys_typescale_label_large_letter_spacing</item>
    </style>
    <style name="small_text_size" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@string/m3_sys_typescale_label_large_font</item>
        <item name="android:fontFamily">@string/m3_sys_typescale_label_large_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">@bool/m3_sys_typescale_label_large_text_all_caps</item>
        <item name="android:letterSpacing">@dimen/m3_sys_typescale_label_large_letter_spacing</item>
    </style>
</resources>